 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
 <link rel="stylesheet" href="styles.css" />


<h1>Dashboard</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Child</th>
        <th>Balance</th>
        <th>Expenses</th>
        <th>Show Task List</th>
        <th>Show Gifts</th>
      </tr>
    </thead>
    <tbody>
      <% @children.each do |child| %>
        <% child.task_lists.each do |task_list| %>
            <% child.finances.each do |finance| %>
                <% child.gifts.each do |gift| %>
          <tr>
            <td><%= child.username %></td>
            <td><%= finance.balance %></td>
            <td><%= finance.expenses %></td>
            <td><%= link_to 'Show Task List', task_lists_path %></td>
            <td><%= link_to 'Show Gifts List', gifts_path(gift) %></td>



          </tr>
        <% end %>
        <% end%>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
